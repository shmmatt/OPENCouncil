generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Document {
  id                String   @id @default(uuid())
  filename          String
  originalName      String
  fileSearchFileId  String?
  fileSearchStoreId String?
  category          String?
  town              String?
  board             String?
  year              Int?
  notes             String?
  createdAt         DateTime @default(now())
}

model ChatSession {
  id        String        @id @default(uuid())
  title     String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(uuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role      String
  content   String
  citations String?
  createdAt DateTime    @default(now())
}
